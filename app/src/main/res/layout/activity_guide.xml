<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function.ui.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        >

        <LinearLayout
            android:id="@+id/ll_dot_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

        <ImageView
            android:id="@+id/iv_dot_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/page_p"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="78dp"
        android:background="@drawable/guide_btn_start_shape"
        android:gravity="center"
        android:text="@string/use_immediately"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        />
</FrameLayout>