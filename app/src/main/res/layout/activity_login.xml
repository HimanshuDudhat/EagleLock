<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".function.ui.LoginActivity">

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_photo_top_android"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/iv_title">

        <include
            layout="@layout/include_login_layout"/>

        <include
            layout="@layout/include_regist_layout"
            android:visibility="gone"/>

        <include
            layout="@layout/include_forget_layout"
            android:visibility="gone"/>

        <include
            layout="@layout/include_regist_succ_layout"
            android:visibility="gone"/>
    </FrameLayout>

</RelativeLayout>